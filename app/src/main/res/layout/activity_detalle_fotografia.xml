<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    tools:context=".DetalleFotografiaActivity">

    <TextView
        android:id="@+id/titilo_detalle_mostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle Fotografia"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center">
    </TextView>

    <ImageView
        android:id="@+id/imagen_detalle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center"
        android:paddingTop="10dp">
    </ImageView>

    <TextView
        android:id="@+id/titilo_detalle_mostrae2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Lugar:"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="10dp">
    </TextView>

    <TextView
        android:id="@+id/nombre_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Lugar"
        android:textSize="30sp"
        android:gravity="center">
    </TextView>
    <TextView
        android:id="@+id/titilo_detalle_mostrae3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="10dp">
    </TextView>

    <TextView
        android:id="@+id/descripcion_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textSize="30sp"
        android:gravity="center">
    </TextView>

</LinearLayout>